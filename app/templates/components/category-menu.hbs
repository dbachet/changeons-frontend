{{#if locatedInFixedTopBar}}
  <div class="row">
    <div class="col-xs-12 col-md-12 not-expanded">
      <a href="" {{action "expandCategoryMenu"}}>
        Filtrer par catégorie
        <span class="glyphicon glyphicon-triangle-bottom small"></span>
      </a>
    </div>
    {{#if categoryMenuIsExpanded}}
      <div class="col-xs-12 col-md-12 expanded">
        <a href="" {{action "expandCategoryMenu"}}>
          Catégories
          <span class="glyphicon glyphicon-triangle-top small"></span>
        </a>
        <br>
        {{category-label category="Alimentation" color="#f5841b" currentCategory=currentCategory}}<br>
        {{category-label category="Agriculture" color="#914e1b" currentCategory=currentCategory}}<br>
        {{category-label category="Environnement" color="#457d24" currentCategory=currentCategory}}<br>
        {{category-label category="Habitat" color="#64336e" currentCategory=currentCategory}}<br>
        {{category-label category="High-Tech" color="#57575c" currentCategory=currentCategory}}<br>
        {{category-label category="Politique" color="#2a82c5" currentCategory=currentCategory}}<br>
        {{category-label category="Santé" color="#e0717b" currentCategory=currentCategory}}<br>
      </div>
    {{/if}}
  </div>
{{else}}
  <div class="row">
    <div class="col-xs-12 col-sm-3 col-sm-offset-6 col-md-3 col-md-offset-5 not-expanded">
      <a href="" {{action "expandCategoryMenu"}}>
        Filtrer par catégorie
        <span class="glyphicon glyphicon-triangle-bottom small"></span>
      </a>
    </div>
    {{#if categoryMenuIsExpanded}}
      <div class="col-xs-12 col-sm-3 col-sm-offset-6 col-md-3 col-md-offset-5 expanded">
        <a href="" {{action "expandCategoryMenu"}}>
          Catégories
          <span class="glyphicon glyphicon-triangle-top small"></span>
        </a>
        <br>
        {{category-label category="Alimentation" color="#f5841b" currentCategory=currentCategory}}<br>
        {{category-label category="Agriculture" color="#914e1b" currentCategory=currentCategory}}<br>
        {{category-label category="Environnement" color="#457d24" currentCategory=currentCategory}}<br>
        {{category-label category="Habitat" color="#64336e" currentCategory=currentCategory}}<br>
        {{category-label category="High-Tech" color="#57575c" currentCategory=currentCategory}}<br>
        {{category-label category="Politique" color="#2a82c5" currentCategory=currentCategory}}<br>
        {{category-label category="Santé" color="#e0717b" currentCategory=currentCategory}}<br>
      </div>
    {{/if}}
  </div>
{{/if}}
{{yield}}
