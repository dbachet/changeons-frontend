<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-3 col-md-offset-0 col-md-push-7 more">
    <div class="wrapper">
      <p class="lead">
        L'idée vous plaît ?
      </p>
      <ul class="social-buttons">
        <li>
          Suivez notre compte Twitter !<br>
          {{follow-twitter}}
        </li>
        <li>
          Aimez notre page Facebook !<br>
          {{like-facebook}}
        </li>
      </ul>
    </div>
  </div>
  <section id="shares" class="col-sm-8 col-sm-offset-2 col-md-5 col-md-offset-2 col-md-pull-3">
    {{#if displayPaginationBar }}
      <div class="pagination-bar text-center">
        {{page-numbers content=content}}
      </div>
    {{/if}}
    <ul>
      {{#each share in model}}

        {{#if share.isLink }}
          {{link-card link=share}}
        {{/if}}

        {{#if share.isTweet}}
          {{tweet-card tweet=share}}
        {{/if}}

      {{/each}}
    </ul>
    {{#if displayPaginationBar }}
      <div class="pagination-bar text-center">
        {{page-numbers content=content}}
      </div>
    {{/if}}
  </section>

  {{outlet}}
</div>