<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="panel panel-default new">
      <div class="panel-body">
        <h1>Créer et partager un lien</h1>
        <form {{action "create" on="submit"}}>
          <div class="form-group">
            <label>
              Description* <small style='color: #CCC'>(max. 160 caractères)</small>
            </label>
            {{textarea value=model.name class='form-control'}}
            {{#each model.errors.name as |error|}}
              <div class="error">
                {{error.message}}
              </div>
            {{/each}}
          </div>

          <div class="form-group">
            <label>URL / lien à partager*</label>
            {{input value=model.url type="text" class='form-control'}}
            {{#each model.errors.url as |error|}}
              <div class="error">
                {{error.message}}
              </div>
            {{/each}}
          </div>

          <div class="form-group">
            <label>Langue*</label>
            {{#power-select selected=language searchEnabled=false options=languages onchange=(action "updateLanguage") as |language|}}
              {{language}}
            {{/power-select}}
            {{#each model.errors.language as |error|}}
              <div class="error">
                {{error.message}}
              </div>
            {{/each}}
          </div>

          <div class="form-group">
            <label>Catégorie*</label>
            {{#power-select selected=category searchEnabled=false options=categories onchange=(action "updateCategory") as |category|}}
              {{category}}
            {{/power-select}}
            {{#each model.errors.category as |error|}}
              <div class="error">
                {{error.message}}
              </div>
            {{/each}}
          </div>

          <div class="form-group">
            <small>
              <label>* Obligatoire</label>
            </small>
          </div>

          <button type="submit" class="btn btn-primary">Enregistrer</button>
          {{link-to 'Annuler' 'shares' class='btn btn-default' activeClass=''}}
        </form>
      </div>
    </div>
  </div>
</div>

